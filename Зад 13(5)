#include <iostream>
#include <math.h>
using namespace std;
int main()
{
    setlocale(LC_ALL, "Russian");
    int n, x;
    float a, b = 1, c = 1;
    cout << "N=";
    cin >> n;
    cout << "A=";
    cin >> a;
    for (x = 1; x <= n; x++)
    {
        b *= -a;
        c += b;
    }
    cout << "результат=" << c;
}
