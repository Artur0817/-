#include <iostream>
using namespace std;
float a, b, s, m, u, d;

int main()
{
	setlocale(LC_ALL, "Russian");
	cout << "Введите a:";
	cin >> a;
	cout << "Введите b:";
	cin >> b;
	if (a and b != 0)
	{
		s = a * a + b * b;
		m = a * a - b * b;
		u = (a * a) * (b * b);
		d = (a * a) / (b * b);
		cout << "Сумма =" << s << endl;
		cout << "Разность =" << m << endl;
		cout << "Произведение =" << u << endl;
		cout << "Частное =" << d << endl;
	}
	return 0;
}
