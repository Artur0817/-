#include <iostream>
using namespace std;

int main() {
setlocale(LC_ALL, "Russian");
int x, y;
cout « "Ведите количество байт: ";
cin » x;
if (x > 1024 && x % 1024 != 0) {
y = x / 1024 + 1;
}
else if (x > 1024 && x % 1024 == 0) {
y = x / 1024;
}
else {
y = 1;
}
cout « x « " байт = " « y « " полных Килобайт";
}
