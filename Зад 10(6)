#include <iostream>
#include <math.h>
using namespace std;
int main()
{
	setlocale(LC_ALL, "Russian");
	int a, b, c;
	cout << "Первый катет равен: ";
	cin >> a;
	cout << "Второй катет равен: ";
	cin >> b;
	cout << "Гипотенуза равна: ";
	cin >> c;
	if (a * a + b * b == c * c)
	{

		cout << "Треугольник является прямоугольным";
	}
	else
	{

		cout << "Треугольник не является прямоугольным";
	}
	return 0;
}
